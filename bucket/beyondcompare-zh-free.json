{
    "version": "4.4.4.27058",
    "description": "Directory and file compare functions in one package",
    "homepage": "https://www.scootersoftware.com/index.php",
    "license": {
        "identifier": "Shareware",
        "url": "https://www.scootersoftware.com/index.php?zz=kb_licensev4"
    },
    "url": "https://www.scootersoftware.com/BCompare-zh-4.4.4.27058.exe",
    "hash": "6f35bc011ed9f142713277ad9f6949d1efd84e817dd9cef094a3e6f26574f124",
    "bin": "Bcomp.exe",
    "innosetup": true,
    "architecture": {
        "64bit": {
            "installer": {
                "script": [
                    "Get-ChildItem \"$dir\" -Filter '*,1*' | Remove-Item -Force",
                    "Get-ChildItem \"$dir\" -Filter '*,2*' | Rename-Item -NewName { $_.Name -replace ',2', '' }"
                ]
            }
        },
        "32bit": {
            "installer": {
                "script": [
                    "Get-ChildItem \"$dir\" -Filter '*,2*' | Remove-Item -Force",
                    "Get-ChildItem \"$dir\" -Filter '*,1*' | Rename-Item -NewName { $_.Name -replace ',1', '' }"
                ]
            }
        }
    },
    "post_install": [
        "warn 'reset trial...'",
        "Remove-ItemProperty Registry::'HKEY_CURRENT_USER\\Software\\Scooter Software\\Beyond Compare 4' 'CacheID' -ErrorAction Ignore"
    ],
    "notes": "If trial has been expired, please uninstall and install again, it will reset the trial",
    "shortcuts": [
        [
            "BCompare.exe",
            "Beyond Compare"
        ],
        [
            "BCClipboard.exe",
            "Clipboard Compare"
        ]
    ],
    "checkver": {
        "url": "https://www.scootersoftware.com/download.php",
        "regex": "/BCompare-zh-([\\d.]+)\\.exe"
    },
    "autoupdate": {
        "url": "https://www.scootersoftware.com/BCompare-zh-$version.exe"
    }
}
